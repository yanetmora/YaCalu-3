<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/ic_rt"
    tools:context="org.utng.app.yacalu.objects.ComputerActivity">


    <Button
        android:background="@android:color/transparent"
        android:text="COMPUTER"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageButton
        style="@style/tx_computer"
        android:id="@+id/btn_computer"
        android:textAlignment="center"
        android:background="@drawable/ic_computer"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_marginTop="30dp"


        />



    <Button
        style="@style/tx_computer"
        android:id="@+id/btn_nextcomp"
        android:text="@string/next"
        android:background="@drawable/shape_blue"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        />

    <Button
        android:id="@+id/btn_previouscomp"
        style="@style/tx_computer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/shape_blue"
        android:text="previous"
        android:layout_marginTop="9dp"
        />



</LinearLayout>