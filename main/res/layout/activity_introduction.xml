<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.utng.app.yacalu.IntroductionActivity">

    <ImageSwitcher
        android:id="@+id/is_intr"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/ic_introduccion1"
        android:layout_alignParentLeft="true">

    </ImageSwitcher>

    <Button
        android:id="@+id/btn_pr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="51dp"
        android:layout_marginStart="61dp"
        android:background="@android:color/transparent"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="61dp"
        android:hint="@string/prev_Introduction"/>

    <Button
        android:id="@+id/btn_nx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/btn_pr"
        android:layout_marginEnd="44dp"
        android:hint="@string/next"
        android:background="@android:color/transparent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="44dp" />
    <Button
        android:hint="@string/go_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_go_menu"
        android:background="@android:color/transparent"/>

</RelativeLayout>